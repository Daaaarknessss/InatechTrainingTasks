@model IEnumerable<KoreMVC.Models.Membership>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cust.CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cust.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MembershipFee.MembershipCategory)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cust.CustomerId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Cust.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipFee.MembershiptypeID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipTime.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MembershipFee.MembershipCategory)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
